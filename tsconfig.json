{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "strict": true,
    "noImplicitReturns": true,
    "declaration": true,
    "rootDir": "./",
    "outDir": "dist",
    "allowJs": true,
    "baseUrl": "./src",
    // "paths": {
    //   "component/*": ["component/*"],
    //   "services/*": ["services/*"],
    //   "pages/*": ["pages/*"],
    //   "helper/*": ["helper/*"],
    //   "types/*": ["types/*"]
    // }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "webpack/commonVariables.js",
    "src/component/Buttons/Button.js",
    "src/component/Menu/FoodListTable/food/foodDetails/likeFood/style.js",
    "src/theme/global.js",
    "src/theme/theme.ts"
  ],
  "exclude": ["node_modules"]
}
