{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@Components/*": ["./src/Components/*"],
      "Redux/*": ["./src/Redux/*"],
      "Pages/*": ["./src/Pages/*"],
      "Route/*": ["./src/Route/*"],
      "Helper/*": ["./src/Helper/*"],
      "Types/*": ["./src/Types/*"],
      "Config/*": ["./src/Config/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
